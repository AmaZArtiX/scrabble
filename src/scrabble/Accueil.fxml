<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scrabble.AccueilControleur">
   <children>
      <Button fx:id="lanJeu" disable="true" layoutX="129.0" layoutY="145.0" mnemonicParsing="false" onAction="#gotoJeu" prefHeight="41.0" prefWidth="142.0" text="Lancer le jeu" />
      <Label layoutX="83.0" layoutY="14.0" text="Accueil du Scrabble">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label layoutX="45.0" layoutY="91.0" text="Pseudo du joueur :">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="nomTxtJoueur" layoutX="197.0" layoutY="88.0" onAction="#lancerJeu" onKeyReleased="#verifPseudo" promptText="Entrez votre pseudo" />
   </children>
</AnchorPane>
